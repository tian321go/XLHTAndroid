<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f2f2f2"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/axeac_toolbar" />


    <View
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:background="#f2f2f2" />

    <RelativeLayout
        android:id="@+id/settings_net"
        android:paddingLeft="25dip"
        android:paddingRight="20dp"
        android:background="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:id="@+id/settings_item_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:singleLine="true"
            android:textColor="#030303"
            android:textSize="16sp"
            android:text="@string/settings_network"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="#00000000"
            android:focusable="false"
            android:src="@drawable/axeac_next" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc" />

    <View
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:background="#f2f2f2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="10dip"
        android:paddingTop="10dip" >

        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="5dip"
            android:text="@string/systemsetups_thirdverify"
            android:textColor="#030303"
            android:textSize="16sp"
            />

        <Button
            android:id="@+id/btn_thirdverify"
            android:layout_width="55dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dip"
            android:background="@drawable/axeac_switch_open" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="10dip"
        android:paddingTop="10dip" >

        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="5dip"
            android:text="@string/settings_demo"
            android:textColor="#030303"
            android:textSize="16sp"
            />

        <Button
            android:id="@+id/btn_isdemo"
            android:layout_width="55dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dip"
            android:background="@drawable/axeac_switch_open" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc" />

    <View
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:background="#f2f2f2" />

    <RelativeLayout
        android:id="@+id/settings_clearcache"
        android:paddingLeft="25dip"
        android:paddingRight="20dp"
        android:background="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:singleLine="true"
            android:textColor="#030303"
            android:textSize="16sp"
            android:text="@string/settings_clearcache"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="#00000000"
            android:focusable="false"
            android:src="@drawable/axeac_next" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc" />

    <RelativeLayout
        android:id="@+id/settings_checknewversion"
        android:paddingLeft="25dip"
        android:paddingRight="20dp"
        android:background="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:singleLine="true"
            android:textColor="#030303"
            android:textSize="16sp"
            android:text="@string/systemsetups_checknewversion"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="#00000000"
            android:focusable="false"
            android:src="@drawable/axeac_next" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:background="#f2f2f2" />

    <RelativeLayout
        android:id="@+id/settings_aboutus"
        android:paddingLeft="25dip"
        android:paddingRight="20dp"
        android:background="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:singleLine="true"
            android:textColor="#030303"
            android:textSize="16sp"
            android:text="@string/settings_about"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="#00000000"
            android:focusable="false"
            android:src="@drawable/axeac_next" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RelativeLayout
        android:paddingLeft="25dip"
        android:paddingRight="20dp"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <TextView
            android:id="@+id/clientIdTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/clientId"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:focusable="false"
            android:paddingBottom="7dp"
            android:singleLine="true"
            android:text="@string/settings_deviceid"
            android:textColor="#888888"
            android:textSize="16sp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/copyId"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_toRightOf="@id/clientIdTitle"
            android:layout_above="@+id/clientId"
            android:layout_marginLeft="5dip"
            android:paddingBottom="7dp"
            android:background="#00000000"
            android:focusable="false"
            android:src="@drawable/copy" />

        <TextView
            android:id="@+id/clientId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:textColor="#999999"
            android:textSize="15sp"
            android:paddingBottom="15dp"/>
    </RelativeLayout>
</LinearLayout>